<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>loginPage.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>login-servlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>leaderboard-servlet</servlet-name>
    <servlet-class>servlets.LeaderboardServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>create-servlet</servlet-name>
    <servlet-class>servlets.CreateAccountServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>login-to-create</servlet-name>
    <servlet-class> servlets.LoginAccessCreate</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>top-money</servlet-name>
    <servlet-class> servlets.TopMoneyWonServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>chat-enter</servlet-name>
    <servlet-class> servlets.ChatEnterServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>top-winning</servlet-name>
    <servlet-class> servlets.TopWinningCountServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>refresh-chat</servlet-name>
    <servlet-class> servlets.RefreshServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>chat-servlet</servlet-name>
    <servlet-class> servlets.ChatServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>sender-servlet</servlet-name>
    <servlet-class> servlets.SendMessageServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>inbox-servlet</servlet-name>
    <servlet-class> servlets.CheckInboxServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>inbox-servlet</servlet-name>
    <url-pattern>/enterInbox</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>sender-servlet</servlet-name>
    <url-pattern>/sendMessage</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>chat-servlet</servlet-name>
    <url-pattern>/chatEnter</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>refresh-chat</servlet-name>
    <url-pattern>/refresh</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>top-winning</servlet-name>
    <url-pattern>/winLeaders</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>chat-enter</servlet-name>
    <url-pattern>/chat</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>top-money</servlet-name>
    <url-pattern>/moneyLeaders</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>login-to-create</servlet-name>
    <url-pattern>/createAccPageAccess</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>leaderboard-servlet</servlet-name>
    <url-pattern>/leaderboards</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>login-servlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>create-servlet</servlet-name>
    <url-pattern>/createAcc</url-pattern>
  </servlet-mapping>

  <listener>
          <listener-class>servlets.ContextListener</listener-class>
  </listener>
</web-app>
